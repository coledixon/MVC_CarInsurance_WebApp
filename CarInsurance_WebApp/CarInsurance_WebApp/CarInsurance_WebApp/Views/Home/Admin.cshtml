@model IEnumerable<CarInsurance_WebApp.Models.vinsuree_data_all>

@{
    ViewBag.Title = "Admin";
}
<p>
    @Html.ActionLink("+", "Create", new { id = "" }, new { @class = "btn-floating btn-large waves-effect waves-light" })
</p>
<div class="center-align">
    <table class="highlight indigo">
        <thead>
            <tr>
                <th>
                    @Html.DisplayName("first")
                </th>
                <th>
                    @Html.DisplayName("last")
                </th>
                <th>
                    @Html.DisplayName("email")
                </th>
                <th>
                    @Html.DisplayName("dob")
                </th>
                <th>
                    @Html.DisplayName("year")
                </th>
                <th>
                    @Html.DisplayName("make")
                </th>
                <th>
                    @Html.DisplayName("model")
                </th>
                <th>
                    @Html.DisplayName("tickets")
                </th>
                <th>
                    @Html.DisplayName("dui")
                </th>
                <th>
                    @Html.DisplayName("coverage")
                </th>
                <th>
                    @Html.DisplayName("quote")
                </th>
                <th>
                    @Html.DisplayName("||")
                </th>
                <th>
                    @Html.DisplayName("")
                </th>
                <th>
                    @Html.DisplayName("")
                </th>
            </tr>
        </thead>

        <tbody class="white">
            @foreach (var rec in Model)
            {
                var _dob = rec.dob.Value.ToShortDateString(); // parse dob to date only
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => rec.first_name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => rec.last_name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => rec.email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => _dob) <!--only want the date, not the whole datetime-->
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => rec.car_year)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => rec.car_make)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => rec.car_model)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => rec.tickets)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => rec.dui)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => rec.coverage_type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => rec.curr_quote)
                    </td>
                    <td>
                        ||
                    </td>
                    <td>
                        @Html.ActionLink("EDIT", "Edit", new { id = rec.insuree_key }, new { @class = "waves-effect waves-teal btn-flat" })
                    </td>
                    <td>
                        @Html.ActionLink("DELETE", "Delete", new { id = rec.insuree_key }, new { @class = "waves-effect waves-teal btn-flat" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
